<UserControl x:Class="HyperQuantUI.View.WalletView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HyperQuantUI.View" 
             xmlns:wallet="clr-namespace:HyperQuantUI.ViewModel.Wallet" 
             d:DataContext="{d:DesignInstance Type=wallet:WalletViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.9*"/>
        </Grid.RowDefinitions>

        <StackPanel 
            Grid.Row="0"
            x:Name="walletStackPanel"
            Orientation="Horizontal">

            <Button
                x:Name="selectConfigFileButton"
                Content="Select config file"
                Margin="5, 10, 0, 10"
                Command="{Binding SelectConfigFile}"/>

            <Button x:Name="showWallets"
                    Content="Show Wallets"
                    Command="{Binding GetBriefCases}"
                    Margin="5, 10, 0, 10"/>

        </StackPanel>

        <DataGrid Grid.Row="1"
                  x:Name="walletData"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding BriefCases,
                                UpdateSourceTrigger=PropertyChanged,
                                NotifyOnTargetUpdated=True}">
            <DataGrid.Columns>

                <DataGridTextColumn
                    Header="USDT"
                    Width="0.25*" 
                    x:Name="candleOpenTimeColumn"
                    IsReadOnly="True"
                    Binding="{Binding USDTAmount, 
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn
                    Header="BTC"
                    Width="0.25*" 
                    x:Name="btcColumn"
                    IsReadOnly="True"
                    Binding="{Binding BTCAmount, 
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged}"/>

                <DataGridTextColumn
                    Header="XRP"
                    Width="0.25*" 
                    x:Name="xprColumn"
                    IsReadOnly="True"
                    Binding="{Binding XRPAmount, 
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged}"/>
                
                <DataGridTextColumn
                    Header="XMR"
                    Width="0.25*" 
                    x:Name="xmrColumn"
                    IsReadOnly="True"
                    Binding="{Binding XMRAmount, 
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged}"/>
                
                <DataGridTextColumn
                    Header="DASH"
                    Width="0.25*" 
                    x:Name="dashColumn"
                    IsReadOnly="True"
                    Binding="{Binding DASHAmount, 
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged}"/>

            </DataGrid.Columns>
        </DataGrid>
        
    </Grid>
</UserControl>
