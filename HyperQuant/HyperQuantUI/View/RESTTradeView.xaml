<UserControl x:Class="HyperQuantUI.View.RESTTradeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HyperQuantUI.View" 
             xmlns:viewmodel="clr-namespace:HyperQuantUI.ViewModel.REST"
             d:DataContext="{d:DesignInstance Type=viewmodel:RESTTradeViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.8*"/>
        </Grid.RowDefinitions>

        <DataGrid 
            x:Name="tradesGrid"
            ItemsSource="{Binding Trades,
                        UpdateSourceTrigger=PropertyChanged}"
            AutoGenerateColumns="False"
            Grid.Row="1">

            <DataGrid.Columns>

                <DataGridTextColumn
                    Header="Id"
                    Width="0.15*" 
                    x:Name="idColumn"
                    IsReadOnly="True"
                    Binding="{Binding Id, 
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged}"
            />

                <DataGridTextColumn
                    Header="Time"
                    Width="0.3*"
                    x:Name="timeColumn"
                    IsReadOnly="True"
                    Binding="{Binding Time,
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged,
                                StringFormat=d}"/>

                <DataGridTextColumn
                    Header="Pair"
                    Width="0.2*"
                    x:Name="pairColumn"
                    IsReadOnly="True"
                    Binding="{Binding Pair,
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged}"/>

                <DataGridTextColumn
                    Header="Price"
                    Width="0.2*"
                    x:Name="priceColumn"
                    IsReadOnly="True"
                    Binding="{Binding Price,
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged}"/>

            </DataGrid.Columns>

        </DataGrid>

        <StackPanel
            x:Name="tradeUIElementsPanel"
            Orientation="Horizontal"
            Grid.Row="0">

            <Label 
                Content="Pair: "
                Margin="5, 10, 0, 10"/>

            <TextBox
                x:Name="pairTextBox"
                MaxLength="10"
                Width="60"
                Margin="5, 12, 0, 12"
                Text="{Binding PairValue,
                       Mode=TwoWay,
                       UpdateSourceTrigger=PropertyChanged}"/>

            <Label 
                Content="Maximum trades count:"
                Margin="5, 10, 0, 10"/>

            <TextBox 
                 Name="maxTradeCountTextBox"
                 MaxLength="5"
                 Width="50"
                 Margin="5, 12, 0, 12"
                 Text="{Binding MaxTradesCountValue,
                        Mode=TwoWay,
                        UpdateSourceTrigger=PropertyChanged}"/>


            <Button 
                x:Name="getTradesButton"
                Content="Show Trades"
                Margin="25, 10, 25, 10"
                Command="{Binding GetTradesCommand}"
                />
        </StackPanel>
    </Grid>
</UserControl>
