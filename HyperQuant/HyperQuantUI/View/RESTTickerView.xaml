<UserControl x:Class="HyperQuantUI.View.RESTTickerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HyperQuantUI.View" 
             xmlns:rest="clr-namespace:HyperQuantUI.ViewModel.REST"
             d:DataContext="{d:DesignInstance Type=rest:RESTTickerViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="900"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.8*"/>
        </Grid.RowDefinitions>

        <DataGrid 
            x:Name="tradesGrid"
            ItemsSource="{Binding Tickers,
                        UpdateSourceTrigger=PropertyChanged}"
            AutoGenerateColumns="False"
            Grid.Row="1">

            <DataGrid.Columns>

                <DataGridTextColumn
                    Header="Frr"
                    Width="0.15*" 
                    x:Name="frrColumn"
                    IsReadOnly="True"
                    Binding="{Binding FRR, 
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged}"/>

                <DataGridTextColumn
                    Header="Bid"
                    Width="0.15*"
                    x:Name="bidColumn"
                    IsReadOnly="True"
                    Binding="{Binding BID,
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged}"/>

                <DataGridTextColumn
                    Header="Bid period"
                    Width="0.2*"
                    x:Name="bidPeriodColumn"
                    IsReadOnly="True"
                    Binding="{Binding BID_PERIOD,
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged}"/>

                <DataGridTextColumn
                    Header="Bid size"
                    Width="0.15*"
                    x:Name="bidSizeColumn"
                    IsReadOnly="True"
                    Binding="{Binding BID_SIZE,
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged}"/>

                <DataGridTextColumn
                    Header="Ask"
                    Width="0.15*"
                    x:Name="askColumn"
                    IsReadOnly="True"
                    Binding="{Binding ASK,
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged}"/>

                <DataGridTextColumn
                    Header="Ask period"
                    Width="0.2*"
                    x:Name="askPeriodColumn"
                    IsReadOnly="True"
                    Binding="{Binding ASK_PERIOD,
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged}"/>

                <DataGridTextColumn
                    Header="Ask size"
                    Width="0.15*" 
                    x:Name="askSizeColumn"
                    IsReadOnly="True"
                    Binding="{Binding ASK_SIZE, 
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged}"/>

                <DataGridTextColumn
                    Header="Daily change"
                    Width="0.22*" 
                    x:Name="idailyChangeColumn"
                    IsReadOnly="True"
                    Binding="{Binding DAILY_CHANGE, 
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged}"/>

                <DataGridTextColumn
                    Header="Daily change perc"
                    Width="0.15*" 
                    x:Name="idailyChangePercColumn"
                    IsReadOnly="True"
                    Binding="{Binding DAILY_CHANGE_PERC, 
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged}"/>

                <DataGridTextColumn
                    Header="Last price"
                    Width="0.15*" 
                    x:Name="lastPriceColumn"
                    IsReadOnly="True"
                    Binding="{Binding LAST_PRICE, 
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged}"/>

                <DataGridTextColumn
                    Header="Volume"
                    Width="0.15*" 
                    x:Name="volumeColumn"
                    IsReadOnly="True"
                    Binding="{Binding VOLUME, 
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged}"/>

                <DataGridTextColumn
                    Header="High"
                    Width="0.15*" 
                    x:Name="highColumn"
                    IsReadOnly="True"
                    Binding="{Binding HIGH, 
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged}"/>

                <DataGridTextColumn
                    Header="Low"
                    Width="0.15*" 
                    x:Name="lowColumn"
                    IsReadOnly="True"
                    Binding="{Binding LOW, 
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged}"/>

                <DataGridTextColumn
                    Header="Frr amount available"
                    Width="0.15*" 
                    x:Name="frrAmountAvailableColumn"
                    IsReadOnly="True"
                    Binding="{Binding FRR_AMOUNT_AVAILABLE, 
                                NotifyOnTargetUpdated=True,
                                UpdateSourceTrigger=PropertyChanged}"/>

            </DataGrid.Columns>

        </DataGrid>

        <StackPanel
            x:Name="tradeUIElementsPanel"
            Orientation="Horizontal"
            Grid.Row="0">

            <Label 
                Content="Pair: "
                Margin="5, 10, 0, 10"/>

            <TextBox
                x:Name="pairTextBox"
                MaxLength="10"
                Width="60"
                Margin="5, 12, 0, 12"
                Text="{Binding PairValue,
                       Mode=TwoWay,
                       UpdateSourceTrigger=PropertyChanged}"/>


            <Button 
                x:Name="getTickersButton"
                Content="Show Tickers"
                Margin="25, 10, 25, 10"
                Command="{Binding GetTickersCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
